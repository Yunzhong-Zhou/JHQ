<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--只需要刷新只写header-->
    <com.liaoinstan.springview.widget.SpringView
        android:id="@+id/springView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!--上部分-->
                <RelativeLayout
                    android:id="@+id/head1_relativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="300dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@mipmap/bg_accountdetail1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <!-- <TextView
                             android:id="@+id/head1_textView5"
                             android:onClick="onClick"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_gravity="right"
                             android:background="@drawable/yuanjiao_15_baise_left"
                             android:drawableLeft="@mipmap/ic_accountdetail4"
                             android:drawablePadding="4dp"
                             android:gravity="center_vertical"
                             android:padding="4dp"
                             android:text="@string/qianbao_h14"
                             android:textColor="#387F9F"
                             android:textSize="15sp" />-->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="80dp"
                            android:gravity="center_horizontal|center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_marginRight="6dp"
                                android:drawableLeft="@mipmap/ic_ofc_white"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/head1_textView1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textSize="40sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginBottom="5dp"
                                android:text="@string/app_ge"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:visibility="gone" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/qianbao_h43"
                            android:textColor="@color/white"
                            android:textSize="15sp" />

                        <View
                            android:layout_width="15dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="6dp"
                            android:background="@color/white" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/head1_textView2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="0"
                                    android:textColor="@color/white"
                                    android:textSize="20sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="6dp"
                                    android:text="@string/qianbao_h15"
                                    android:textColor="@color/white1"
                                    android:textSize="10sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="34dp"
                                android:background="@color/xian" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/head1_textView3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="0"
                                    android:textColor="@color/white"
                                    android:textSize="20sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="6dp"
                                    android:text="@string/qianbao_h16"
                                    android:textColor="@color/white1"
                                    android:textSize="10sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="34dp"
                                android:background="@color/xian" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/head1_textView4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="0"
                                    android:textColor="@color/white"
                                    android:textSize="20sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="6dp"
                                    android:text="@string/qianbao_h17"
                                    android:textColor="@color/white1"
                                    android:textSize="10sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="34dp"
                                android:background="@color/xian" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/head1_textView5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="0"
                                    android:textColor="@color/white"
                                    android:textSize="20sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="6dp"
                                    android:text="@string/qianbao_h18"
                                    android:textColor="@color/white1"
                                    android:textSize="10sp" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="6dp"
                            android:background="@drawable/yuanjiao_10_baise"
                            android:gravity="center_vertical">

                            <LinearLayout
                                android:id="@+id/head1_linearLayout1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:onClick="onClick"
                                android:orientation="vertical"
                                android:padding="14dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:drawableLeft="@mipmap/ic_ofcaccountdetail1"
                                    android:drawablePadding="10dp"
                                    android:gravity="center"
                                    android:text="@string/qianbao_h6"
                                    android:textColor="@color/black1"
                                    android:textSize="13sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="28dp"
                                android:background="@color/xian"
                                android:visibility="visible" />

                            <LinearLayout
                                android:id="@+id/head1_linearLayout2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:onClick="onClick"
                                android:orientation="vertical"
                                android:padding="14dp"
                                android:visibility="visible">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:drawableLeft="@mipmap/ic_ofcaccountdetail2"
                                    android:drawablePadding="10dp"
                                    android:gravity="center"
                                    android:text="@string/qianbao_h54"
                                    android:textColor="@color/black1"
                                    android:textSize="13sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="28dp"
                                android:background="@color/xian"
                                android:visibility="visible" />

                            <LinearLayout
                                android:id="@+id/head1_linearLayout4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:onClick="onClick"
                                android:orientation="vertical"
                                android:padding="14dp"
                                android:visibility="visible">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:drawableLeft="@mipmap/ic_ofcaccountdetail3"
                                    android:drawablePadding="10dp"
                                    android:gravity="center"
                                    android:text="@string/qianbao_h55"
                                    android:textColor="@color/black1"
                                    android:textSize="13sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="28dp"
                                android:background="@color/xian" />

                            <LinearLayout
                                android:id="@+id/head1_linearLayout3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:onClick="onClick"
                                android:orientation="vertical"
                                android:padding="14dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:drawableLeft="@mipmap/ic_accountdetail3"
                                    android:drawablePadding="10dp"
                                    android:gravity="center"
                                    android:text="@string/qianbao_h8"
                                    android:textColor="@color/black1"
                                    android:textSize="13sp" />
                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>
                <!--悬浮部分-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/yuanjiao_10_bg"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/invis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusableInTouchMode="true"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <LinearLayout
                                android:id="@+id/linearLayout1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:onClick="onClick"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:drawablePadding="5dp"
                                    android:gravity="center"
                                    android:padding="14dp"
                                    android:text="@string/qianbao_h9"
                                    android:textColor="@color/green"
                                    android:textSize="16sp" />

                                <View
                                    android:id="@+id/view1"
                                    android:layout_width="66dp"
                                    android:layout_height="3dp"
                                    android:background="@drawable/yuanjiao_5_lvse" />
                            </LinearLayout>

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <LinearLayout
                                android:id="@+id/linearLayout2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:onClick="onClick"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:drawablePadding="5dp"
                                    android:gravity="center"
                                    android:padding="14dp"
                                    android:text="@string/qianbao_h10"
                                    android:textColor="@color/black4"
                                    android:textSize="16sp" />

                                <View
                                    android:id="@+id/view2"
                                    android:layout_width="66dp"
                                    android:layout_height="3dp"
                                    android:background="@drawable/yuanjiao_5_lvse"
                                    android:visibility="invisible" />
                            </LinearLayout>

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/xian" />

                        <LinearLayout
                            android:id="@+id/pop_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <LinearLayout
                                android:id="@+id/ll_paixu"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:onClick="onClick"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_paixu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableRight="@mipmap/down_black"
                                    android:drawablePadding="20dp"
                                    android:padding="10dp"
                                    android:text="@string/app_type_paixu"
                                    android:textColor="@color/black3"
                                    android:textSize="15sp" />

                            </LinearLayout>

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="28dp"
                                android:background="@color/xian" />

                            <LinearLayout
                                android:id="@+id/ll_zhuangtai"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:onClick="onClick"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_zhuangtai"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableRight="@mipmap/down_black"
                                    android:drawablePadding="20dp"
                                    android:padding="10dp"
                                    android:text="@string/app_type_zhuangtai"
                                    android:textColor="@color/black3"
                                    android:textSize="15sp" />

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                    <!--列表-->
                    <com.ofc.ofc.view.LoadingLayout
                        android:id="@+id/loading_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </com.ofc.ofc.view.LoadingLayout>
                </LinearLayout>

            </LinearLayout>


        </androidx.core.widget.NestedScrollView>
    </com.liaoinstan.springview.widget.SpringView>
    <!--标题-->
    <LinearLayout
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/left_btn"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:onClick="onClick"
            android:padding="16dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_return1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/qianbao_h42"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/right_btn"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:onClick="onClick"
            android:padding="13dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_fenxiang"
            android:visibility="invisible" />

    </LinearLayout>
</RelativeLayout>