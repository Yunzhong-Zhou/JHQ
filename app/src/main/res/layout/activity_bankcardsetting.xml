<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/yuanjiao_10_bg"
        android:orientation="vertical"
        android:padding="14dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/yuanjiao_5_baiseyinying"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:text="@string/setting_h5"
                android:textColor="@color/black1"
                android:visibility="visible" />

            <EditText
                android:id="@+id/editText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="end"
                android:hint="@string/setting_h6"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:textColor="@color/black1"
                android:textColorHint="@color/black4"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/ic_down_black"
                android:gravity="right"
                android:hint="@string/setting_h6"
                android:onClick="onClick"
                android:paddingBottom="14dp"
                android:paddingLeft="14dp"
                android:paddingRight="24dp"
                android:paddingTop="14dp"
                android:textColor="@color/black1"
                android:textColorHint="@color/black4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/yuanjiao_5_baiseyinying"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="14dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="14dp"
                android:text="@string/setting_h31"
                android:textColor="@color/black1"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/ic_down_black"
                android:gravity="right"
                android:hint="@string/setting_h32"
                android:onClick="onClick"
                android:paddingBottom="14dp"
                android:paddingLeft="14dp"
                android:paddingRight="24dp"
                android:paddingTop="14dp"
                android:singleLine="true"
                android:textColor="@color/black1"
                android:textColorHint="@color/black4" />

            <EditText
                android:id="@+id/editText7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:gravity="end"
                android:hint="支行"
                android:paddingBottom="14dp"
                android:paddingLeft="14dp"
                android:paddingRight="24dp"
                android:paddingTop="14dp"
                android:textColor="@color/black1"
                android:textColorHint="@color/black4"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/yuanjiao_5_baiseyinying"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="14dp"
                android:paddingLeft="14dp"
                android:paddingRight="24dp"
                android:paddingTop="14dp"
                android:text="@string/setting_h7"
                android:textColor="@color/black1" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="end"
                android:hint="@string/setting_h8"
                android:paddingBottom="14dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingTop="14dp"
                android:textColor="@color/black1"
                android:textColorHint="@color/black4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/yuanjiao_5_baiseyinying"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="14dp"
                android:paddingLeft="14dp"
                android:paddingRight="24dp"
                android:paddingTop="14dp"
                android:text="@string/setting_h9"
                android:textColor="@color/black1" />

            <EditText
                android:id="@+id/editText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="end"
                android:hint="@string/setting_h10"
                android:inputType="number"
                android:paddingBottom="14dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingTop="14dp"
                android:textColor="@color/black1"
                android:textColorHint="@color/black4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/yuanjiao_5_baiseyinying"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="14dp"
                android:paddingLeft="14dp"
                android:paddingRight="24dp"
                android:paddingTop="14dp"
                android:text="@string/setting_h33"
                android:textColor="@color/black1" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="right"
                android:hint="@string/setting_h34"
                android:paddingBottom="14dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingTop="14dp"
                android:textColor="@color/black1"
                android:textColorHint="@color/black4" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/yuanjiao_5_baiseyinying"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="14dp"
                android:paddingLeft="14dp"
                android:paddingRight="24dp"
                android:paddingTop="14dp"
                android:text="@string/setting_h36"
                android:textColor="@color/black1" />

            <EditText
                android:id="@+id/editText5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="right"
                android:hint="@string/setting_h16"
                android:inputType="number"
                android:paddingBottom="14dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingTop="14dp"
                android:textColor="@color/black1"
                android:textColorHint="@color/black4" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:background="@drawable/btn_yzm"
                android:onClick="onClick"
                android:paddingBottom="8dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="8dp"
                android:singleLine="true"
                android:text="@string/app_sendcode"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/yuanjiao_5_baiseyinying"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="14dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="14dp"
                android:text="@string/takecash_h9"
                android:textColor="@color/black1"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="right"
                android:hint="@string/takecash_h10"
                android:inputType="textPassword"
                android:paddingBottom="14dp"
                android:paddingLeft="14dp"
                android:paddingRight="24dp"
                android:paddingTop="14dp"
                android:textColor="@color/black1"
                android:textColorHint="@color/black4"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_img1"
            android:gravity="center"
            android:onClick="onClick"
            android:padding="12dp"
            android:text="确定"
            android:textColor="@color/white" />
    </LinearLayout>
</ScrollView>
