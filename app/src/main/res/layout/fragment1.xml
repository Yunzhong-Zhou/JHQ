<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/headView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="214dp"
        android:background="@mipmap/bg_fragment1"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.william.gradient.GradientTextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="42sp"
                        android:textStyle="bold"
                        app:gradient_animate="false"
                        app:gradient_direction="topToBottom"
                        app:gradient_endColor="#85E5BB"
                        app:gradient_speed="normal"
                        app:gradient_startColor="@color/white" />

                    <com.william.gradient.GradientTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_tai"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        app:gradient_animate="false"
                        app:gradient_direction="topToBottom"
                        app:gradient_endColor="#85E5BB"
                        app:gradient_speed="normal"
                        app:gradient_startColor="@color/white" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fragment1_h1"
                    android:textColor="@color/white2"
                    android:textSize="15sp" />


            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.william.gradient.GradientTextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="42sp"
                        android:textStyle="bold"
                        app:gradient_animate="false"
                        app:gradient_direction="topToBottom"
                        app:gradient_endColor="#85E5BB"
                        app:gradient_speed="normal"
                        app:gradient_startColor="@color/white" />

                    <com.william.gradient.GradientTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_ge"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        app:gradient_animate="false"
                        app:gradient_direction="topToBottom"
                        app:gradient_endColor="#85E5BB"
                        app:gradient_speed="normal"
                        app:gradient_startColor="@color/white" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fragment1_h2"
                    android:textColor="@color/white2"
                    android:textSize="15sp" />


            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-35dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/yuanjiao_20_huise2"
            android:elevation="5dp"
            android:paddingLeft="30dp"
            android:paddingTop="13dp"
            android:paddingRight="30dp"
            android:paddingBottom="13dp"
            android:text="@string/fragment1_h2"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/yuanjiao_20_baise"
            android:elevation="5dp"
            android:paddingLeft="30dp"
            android:paddingTop="13dp"
            android:paddingRight="30dp"
            android:paddingBottom="13dp"
            android:text="@string/fragment1_h3"
            android:textColor="@color/green" />

    </LinearLayout>

    <com.fone.fone.view.LoadingLayout
        android:id="@+id/loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <!--只需要刷新只写header-->
        <com.liaoinstan.springview.widget.SpringView
            android:id="@+id/springView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--列表-->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </com.liaoinstan.springview.widget.SpringView>
    </com.fone.fone.view.LoadingLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="225dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/yuanjiaobiankuang_20_lvse"
        android:gravity="center"
        android:text="@string/fragment1_h4"
        android:textColor="@color/green" />


</LinearLayout>