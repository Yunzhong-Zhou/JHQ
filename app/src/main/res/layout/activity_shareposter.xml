<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <!--只需要刷新只写header-->
    <com.liaoinstan.springview.widget.SpringView
        android:id="@+id/springView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="@color/black"
                    android:src="@mipmap/bg_shareposter1" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="-30dp"
                    android:layout_marginRight="10dp"
                    android:adjustViewBounds="true"
                    android:src="@mipmap/bg_shareposter2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:drawableLeft="@mipmap/bg_shareposter3"
                    android:drawableRight="@mipmap/bg_shareposter4"
                    android:drawablePadding="15dp"
                    android:text="@string/fragment5_h25"
                    android:textColor="@color/black1"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="14dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@mipmap/bg_shareposter5"
                            android:drawablePadding="14dp"
                            android:text="@string/fragment5_h26"
                            android:textColor="@color/black1"
                            android:textSize="15sp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@mipmap/bg_shareposter5"
                            android:drawablePadding="14dp"
                            android:text="@string/fragment5_h27"
                            android:layout_marginTop="18dp"
                            android:textColor="@color/black1"
                            android:textSize="15sp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@mipmap/bg_shareposter5"
                            android:drawablePadding="14dp"
                            android:text="@string/fragment5_h28"
                            android:layout_marginTop="18dp"
                            android:textColor="@color/black1"
                            android:textSize="15sp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@mipmap/bg_shareposter5"
                            android:drawablePadding="14dp"
                            android:text="@string/fragment5_h29"
                            android:layout_marginTop="18dp"
                            android:textColor="@color/black1"
                            android:textSize="15sp"
                            />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="145dp"
                        android:layout_height="145dp"
                        android:padding="8dp"
                        android:layout_marginRight="14dp"
                        android:background="@mipmap/bg_shareposter6" />


                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </com.liaoinstan.springview.widget.SpringView>
    <!--标题-->
    <LinearLayout
        android:id="@+id/headView"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/left_btn"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:onClick="onClick"
            android:padding="22dp"
            android:layout_marginTop="-10dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_return1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/fragment5_h15"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/right_btn"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:onClick="onClick"
            android:padding="19dp"
            android:layout_marginTop="-10dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_fenxiang"
            android:visibility="visible" />

    </LinearLayout>
</RelativeLayout>