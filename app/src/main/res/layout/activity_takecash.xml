<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--MATERIAL、CIRCLES、 WATER_DROP、RING and SMARTISAN-->
    <com.liaoinstan.springview.widget.SpringView
        android:id="@+id/springView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                //ETH地址

                <LinearLayout
                    android:id="@+id/linearLayout_addr"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:lineSpacingExtra="5dp"
                        android:padding="14dp"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_img2"
                        android:gravity="center"
                        android:onClick="onClick"
                        android:text="@string/takecash_h26"
                        android:textColor="@color/white"
                        android:paddingBottom="2dp"
                        android:textSize="15sp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="14dp"
                        android:text="@string/takecash_h2"
                        android:textColor="@color/white1"
                        android:textSize="15sp" />

                </LinearLayout>

                //下部

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/yuanjiao_10_bg"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="14dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="14dp">

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/takecash_h3"
                                android:textColor="@color/green"
                                android:textSize="15sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="28dp"
                                android:text="@string/takecash_h4"
                                android:textColor="@color/blue"
                                android:textSize="15sp"
                                android:visibility="gone" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/yuanjiao_5_baise"
                            android:elevation="2dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingTop="5dp"
                            android:layout_marginLeft="14dp"
                            android:layout_marginRight="14dp"
                            android:paddingBottom="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="14dp"
                                android:text="@string/takecash_h7"
                                android:textColor="@color/black1"
                                android:textSize="15sp" />

                            <EditText
                                android:id="@+id/editText1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/transparent"
                                android:gravity="right"
                                android:hint="@string/takecash_h8"
                                android:inputType="number"
                                android:padding="14dp"
                                android:textColor="@color/black1"
                                android:textColorHint="@color/black4"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right|center_vertical"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:layout_marginRight="14dp"
                            android:text="@string/takecash_h14"
                            android:textColor="@color/black4"
                            android:textColorHint="@color/black4"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:id="@+id/linearLayout3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/yuanjiao_5_baise"
                            android:elevation="2dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingTop="5dp"
                            android:layout_marginLeft="14dp"
                            android:layout_marginRight="14dp"
                            android:paddingBottom="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="14dp"
                                android:text="@string/takecash_h11"
                                android:textColor="@color/black1"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right|center_vertical"
                                android:text="0"
                                android:padding="14dp"
                                android:textColor="@color/black1"
                                android:textColorHint="@color/black4"
                                android:textSize="15sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/yuanjiao_5_baise"
                            android:elevation="2dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingTop="5dp"
                            android:layout_marginLeft="14dp"
                            android:layout_marginRight="14dp"
                            android:paddingBottom="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="14dp"
                                android:text="@string/takecash_h9"
                                android:textColor="@color/black1"
                                android:textSize="15sp" />

                            <EditText
                                android:id="@+id/editText2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/transparent"
                                android:gravity="right"
                                android:hint="@string/takecash_h10"
                                android:inputType="textPassword"
                                android:padding="14dp"
                                android:textColor="@color/black1"
                                android:textColorHint="@color/black4"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/yuanjiao_5_baise"
                            android:elevation="2dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingTop="5dp"
                            android:layout_marginLeft="14dp"
                            android:layout_marginRight="14dp"
                            android:paddingBottom="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="14dp"
                                android:text="@string/takecash_h6"
                                android:textColor="@color/black1"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right|center_vertical"
                                android:hint=""
                                android:padding="14dp"
                                android:textColor="@color/black1"
                                android:textColorHint="@color/black4"
                                android:textSize="15sp" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/yuanjiao_5_baise"
                            android:elevation="2dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp"
                            android:paddingTop="5dp"
                            android:layout_marginLeft="14dp"
                            android:layout_marginRight="14dp"
                            android:paddingBottom="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="14dp"
                                android:text="@string/settransactionpassword_h4"
                                android:textColor="@color/black1"
                                android:visibility="visible" />

                            <EditText
                                android:id="@+id/editText3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/transparent"
                                android:hint="@string/settransactionpassword_h5"
                                android:inputType="number"
                                android:padding="14dp"
                                android:singleLine="true"
                                android:textColor="@color/black1"
                                android:textColorHint="@color/black4"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="14dp"
                                android:background="@drawable/yuanjiao_5_lvse"
                                android:onClick="onClick"
                                android:paddingBottom="6dp"
                                android:paddingLeft="14dp"
                                android:paddingRight="14dp"
                                android:paddingTop="6dp"
                                android:singleLine="true"
                                android:text="@string/app_sendcode"
                                android:textColor="@color/white"
                                android:textSize="11sp" />

                        </LinearLayout>

                    </LinearLayout>


                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/btn_img1"
                        android:gravity="center"
                        android:onClick="onClick"
                        android:padding="12dp"
                        android:text="@string/takecash_h1"
                        android:textColor="@color/white"
                        android:textSize="15sp" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </com.liaoinstan.springview.widget.SpringView>
</RelativeLayout>