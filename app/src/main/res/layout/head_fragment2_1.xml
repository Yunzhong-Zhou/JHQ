<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:gravity="center_horizontal|bottom"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="14dp"
                android:drawableLeft="@mipmap/ic_fragment4_1"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/head1_textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="60sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_ge"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/head1_textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawablePadding="8dp"
                android:drawableRight="@mipmap/ic_next_white"
                android:gravity="right"
                android:padding="14dp"
                android:text="@string/fragment2_h2"
                android:textColor="@color/white"
                android:textSize="13sp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:text="@string/fragment2_h1"
            android:textColor="@color/white"
            android:textSize="13sp" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            //背景

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="60dp"
                android:background="@color/background"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                //激活区块

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:background="@drawable/yuanjiao_5_baiseyinying"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/transparentwhite1"
                            android:orientation="horizontal"
                            android:paddingBottom="30dp"
                            android:paddingTop="24dp">

                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_width="47dp"
                                android:layout_height="47dp"
                                android:layout_centerInParent="true"
                                android:background="@mipmap/ic_xiexian" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="-30dp"
                                android:layout_toLeftOf="@id/imageView"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/head1_textView3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@color/black1"
                                    android:textSize="25sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/fragment2_h3"
                                    android:textColor="@color/black3"
                                    android:textSize="11sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_marginLeft="-10dp"
                                android:layout_toRightOf="@id/imageView"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/head1_textView4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@color/black1"
                                    android:textSize="25sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/fragment2_h4"
                                    android:textColor="@color/black3"
                                    android:textSize="11sp" />
                            </LinearLayout>

                        </RelativeLayout>

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="52dp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/black3" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/transparentwhite1"
                            android:orientation="horizontal"
                            android:paddingBottom="30dp"
                            android:paddingTop="24dp">

                            <ImageView
                                android:id="@+id/imageView1"
                                android:layout_width="47dp"
                                android:layout_height="47dp"
                                android:layout_centerInParent="true"
                                android:background="@mipmap/ic_xiexian" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="-30dp"
                                android:layout_toLeftOf="@id/imageView1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/head1_textView5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@color/black1"
                                    android:textSize="25sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/fragment2_h5"
                                    android:textColor="@color/black3"
                                    android:textSize="11sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_marginLeft="-10dp"
                                android:layout_toRightOf="@id/imageView1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/head1_textView6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@color/black1"
                                    android:textSize="25sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/fragment2_h6"
                                    android:textColor="@color/black3"
                                    android:textSize="11sp" />
                            </LinearLayout>


                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/head1_linearLayout1"
                        android:layout_width="192dp"
                        android:layout_height="54dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="110dp"
                        android:background="@mipmap/bg_fragment2_1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@mipmap/ic_fragment2_1"
                            android:drawablePadding="8dp"
                            android:text="@string/fragment2_h7"
                            android:textColor="@color/white"
                            android:textSize="15sp" />

                    </LinearLayout>
                </RelativeLayout>

                //我的区块

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/yuanjiao_5_baiseyinying"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="14dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/fragment2_h8"
                            android:textColor="@color/black1"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/head1_textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fragment2_h9"
                            android:textColor="@color/black2"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout_add1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingBottom="14dp"
                        android:visibility="gone">

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout_empty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="14dp"
                        android:visibility="visible">

                        <TextView
                            android:id="@id/btn_empty_retry"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableTop="@mipmap/empty_img"
                            android:gravity="center"
                            android:drawablePadding="10dp"
                            android:paddingBottom="14dp"
                            android:text="@string/app_reload"
                            android:textColor="@color/black1" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>


        </FrameLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>