<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="@mipmap/bg_fragment1_1"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="290dp"
            android:layout_height="280dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/bg_fragment1_7" />

            <com.cfo.chocoin.view.WaveProgress
                android:id="@+id/wave_progress_bar"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_centerInParent="true"
                android:visibility="gone"
                app:bgColor="#fff"
                app:circleColor="#fff"
                app:circleWidth="1dp"
                app:darkWaveAnimTime="3000"
                app:darkWaveColor="#B558D2"
                app:lightWaveAnimTime="3000"
                app:lightWaveColor="#E9CDF1"
                app:lightWaveDirect="R2L"
                app:lockWave="false"
                app:value="0"
                app:valueSize="0dp"
                app:waveHeight="10dp"
                app:waveNum="2" />

            <com.cfo.chocoin.view.wave.WaveProgress
                android:id="@+id/waveProgress"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_centerInParent="true" />


            <com.cfo.chocoin.view.MyArcView
                android:id="@+id/myArcview"
                android:layout_width="290dp"
                android:layout_height="280dp"
                android:layout_centerInParent="true" />

            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:src="@mipmap/ic_fragment1_3"/>
                    <TextView
                        android:id="@+id/head1_textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/yellow"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="M"
                        android:visibility="gone"
                        android:textColor="@color/yellow"
                        android:textSize="15sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fragment1_h1"
                    android:textColor="@color/black3"
                    android:textSize="12sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/head1_textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/yuanjiaobiankuang_10_zise"
                    android:paddingBottom="2dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="2dp"
                    android:text="@string/fragment1_h2"
                    android:textColor="@color/purple"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="45dp"
                    android:layout_marginRight="12dp"
                    android:background="@mipmap/bg_fragment1_6"
                    android:gravity="center"
                    android:paddingBottom="6dp"
                    android:text="@string/fragment1_h8"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/head1_textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawablePadding="4dp"
            android:drawableTop="@mipmap/ic_fragment1_1"
            android:padding="14dp"
            android:text="@string/fragment1_h9"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/bg_fragment1_9"
            android:layout_marginTop="320dp"
            android:paddingLeft="20sp"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/bg_fragment1_8"
            android:layout_marginTop="340dp"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="370dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="50dp"
            android:scaleType="fitXY"
            android:src="@mipmap/bg_fragment1_5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/head1_linearLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/bg_fragment1_2"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/head1_textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_fragment1_2"
                    android:drawablePadding="8dp"
                    android:text="@string/fragment1_h3"
                    android:textColor="@color/white"
                    android:textSize="17sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/head1_view1"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/bg_fragment1_3"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fragment1_h5"
                            android:textColor="@color/white1"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/head1_textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:layout_marginLeft="2dp"
                            android:textColor="@color/white"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="85dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/yuanjiao_5_zisejianbian"
                    android:padding="5dp">

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="27dp"
                        android:clipOrientation="horizontal"
                        android:gravity="right"
                        android:max="100"
                        android:progress="0"
                        android:progressDrawable="@drawable/progressbar_bg_lansejianbian" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="20dp"
                    android:background="@mipmap/bg_fragment1_4">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:background="@drawable/yuanxing_lanse"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/head1_textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fragment1_h4"
                            android:textColor="@color/white2"
                            android:textSize="13sp" />

                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>