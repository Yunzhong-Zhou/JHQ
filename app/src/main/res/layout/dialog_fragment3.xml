<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@mipmap/bg_dialog"
        android:gravity="center|bottom"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/fragment3_h9"
            android:drawablePadding="15dp"
            android:drawableLeft="@mipmap/ic_fragment1_left"
            android:drawableRight="@mipmap/ic_fragment1_right"
            android:textColor="@color/green"
            android:textSize="22sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment3_h10"
                android:textColor="@color/black"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.1TB"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="22sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment3_h11"
                android:textColor="@color/black"
                android:textSize="13sp" />

        </LinearLayout>


        <!--<TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="10dp"
            android:layout_marginBottom="14dp"
            android:layout_marginTop="100dp"
            android:text="@string/fragment3_h12"
            android:textColor="@color/black1"
            android:textSize="15sp" />-->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_img1"
            android:gravity="center"
            android:onClick="onClick"
            android:singleLine="true"
            android:text="@string/fragment3_h12"
            android:textColor="@color/white"
            android:textSize="15sp" />


    </LinearLayout>

    <ImageView
        android:id="@+id/dismiss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="8dp"
        android:visibility="visible"
        android:src="@mipmap/ic_delete" />
</LinearLayout>