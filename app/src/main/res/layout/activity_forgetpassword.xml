<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_login"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:id="@+id/headView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/title_left"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:onClick="onClick"
                android:padding="21dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_return1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/forgetpassword_h6"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/title_right"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:onClick="onClick"
                android:src="@mipmap/ic_guoqi"
                android:visibility="invisible" />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/editText1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:hint="@string/forgetpassword_h1"
                android:inputType="phone"
                android:paddingLeft="70dp"
                android:maxLength="11"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white2"
                android:textSize="15sp"
                android:theme="@style/MyEditText1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableRight="@mipmap/ic_down_white"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"
                    android:onClick="onClick"
                    android:text="+86"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/white" />

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:hint="@string/registered_h2"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white2"
                android:textSize="15sp"
                android:theme="@style/MyEditText" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="0dp"
                android:background="@drawable/btn_yzm_huise"
                android:onClick="onClick"
                android:paddingLeft="10dp"
                android:paddingTop="6dp"
                android:paddingRight="10dp"
                android:paddingBottom="6dp"
                android:singleLine="true"
                android:text="@string/app_sendcode"
                android:textColor="@color/green"
                android:textSize="11sp" />

        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editText6"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:hint="@string/registered_h11"
            android:singleLine="true"
            android:inputType="text"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textColorHint="@color/white2"
            android:textSize="15sp"
            android:theme="@style/MyEditText" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editText3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:hint="@string/registered_h3"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white2"
            android:textSize="15sp"
            android:theme="@style/MyEditText" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editText4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:hint="@string/registered_h4"
            android:inputType="textPassword"
            android:singleLine="true"
            android:visibility="visible"
            android:textColor="@color/white"
            android:textColorHint="@color/white2"
            android:textSize="15sp"
            android:theme="@style/MyEditText" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="27dp"
            android:background="@drawable/btn_img1"
            android:gravity="center"
            android:onClick="onClick"
            android:singleLine="true"
            android:text="@string/forgetpassword_h5"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </LinearLayout>
</ScrollView>