<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/yuanjiao_10_baise_top"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingRight="20dp">
        <!--无银行卡页面-->
        <LinearLayout
            android:id="@+id/linearLayout_wu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:text="@string/fragment5_h62"
                    android:textColor="@color/black1"
                    android:textSize="15sp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/textView1"
                    android:onClick="onClick"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:gravity="center_vertical|right"
                    android:hint="@string/fragment5_h65"
                    android:paddingLeft="100dp"
                    android:drawableRight="@mipmap/ic_down_black"
                    android:drawablePadding="10dp"
                    android:focusable="false"
                    android:paddingRight="10dp"
                    android:textColor="@color/black1"
                    android:textColorHint="@color/black3"
                    android:textSize="15sp"
                    android:theme="@style/MyEditText" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:text="@string/fragment5_h63"
                    android:textColor="@color/black1"
                    android:textSize="15sp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/editText1"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:gravity="center_vertical|right"
                    android:hint="@string/fragment5_h66"
                    android:paddingLeft="100dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/black1"
                    android:textColorHint="@color/black3"
                    android:textSize="15sp"
                    android:theme="@style/MyEditText" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:text="@string/fragment5_h64"
                    android:textColor="@color/black1"
                    android:textSize="15sp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/editText2"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:gravity="center_vertical|right"
                    android:hint="@string/fragment5_h67"
                    android:paddingLeft="100dp"
                    android:paddingRight="10dp"
                    android:inputType="number"
                    android:textColor="@color/black1"
                    android:textColorHint="@color/black3"
                    android:textSize="15sp"
                    android:theme="@style/MyEditText" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:text="@string/address_h4"
                    android:textColor="@color/black1"
                    android:textSize="15sp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:focusable="false"
                    android:gravity="center_vertical|right"
                    android:hint="@string/address_h5"
                    android:inputType="phone"
                    android:paddingLeft="100dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/black1"
                    android:textColorHint="@color/black3"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:theme="@style/MyEditText" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:text="@string/address_h6"
                    android:textColor="@color/black1"
                    android:textSize="15sp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/editText3"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:gravity="center_vertical|right"
                    android:hint="@string/address_h7"
                    android:inputType="number"
                    android:paddingLeft="100dp"
                    android:paddingRight="150dp"
                    android:textColor="@color/black1"
                    android:textColorHint="@color/black3"
                    android:textSize="15sp"
                    android:theme="@style/MyEditText" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/yuanjiaobiankuang_10_lvse"
                    android:onClick="onClick"
                    android:paddingLeft="14dp"
                    android:paddingTop="8dp"
                    android:paddingRight="14dp"
                    android:paddingBottom="8dp"
                    android:singleLine="true"
                    android:text="@string/app_sendcode"
                    android:textColor="@color/green"
                    android:textSize="10sp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:text="@string/address_h8"
                    android:textColor="@color/black1"
                    android:textSize="15sp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/editText4"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:gravity="center_vertical|right"
                    android:hint="@string/address_h9"
                    android:inputType="textPassword"
                    android:paddingLeft="100dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/black1"
                    android:textColorHint="@color/black3"
                    android:textSize="15sp"
                    android:theme="@style/MyEditText" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:visibility="gone"
                android:text="@string/fragment5_h68"
                android:textColor="@color/black3" />
            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="14dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/btn_img1"
                android:gravity="center"
                android:onClick="onClick"
                android:padding="12dp"
                android:text="@string/app_confirm"
                android:textColor="@color/white" />
        </LinearLayout>
        <!--有银行页面-->
        <LinearLayout
            android:id="@+id/linearLayout_you"
            android:layout_width="match_parent"
            android:layout_height="173dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/yuanjiao_5_baise"
            android:elevation="2dp"
            android:onClick="onClick"
            android:visibility="gone"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/ic_yinlian"
                    android:drawablePadding="6dp"
                    android:text="@string/addrmanage_h16"
                    android:padding="15dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/black2"
                    android:textSize="15sp"
                    android:textStyle="bold" />
                <ImageView
                    android:id="@+id/iv_edit"
                    android:onClick="onClick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_edit"
                    android:padding="15dp"/>

            </LinearLayout>


            <TextView
                android:id="@+id/tv_banknum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="0"
                android:textColor="@color/black1"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/addrmanage_h11"
                android:textColor="@color/black3"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:id="@+id/tv_kaihuname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="NAME"
                    android:textColor="@color/black1"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_bankname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NAME"
                    android:textColor="@color/black1"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/addrmanage_h12"
                    android:textColor="@color/black3"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/addrmanage_h13"
                    android:textColor="@color/black3"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>
