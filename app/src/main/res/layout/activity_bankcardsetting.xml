<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/yuanjiao_10_bg">
        <!--无银行卡页面-->
        <LinearLayout
            android:id="@+id/linearLayout_wu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/yuanjiao_5_baise"
                android:elevation="2dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp"
                    android:text="@string/fragment5_h62"
                    android:textColor="@color/black1"
                    android:visibility="visible" />


                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:drawableRight="@mipmap/ic_down_black"
                    android:drawablePadding="10dp"
                    android:gravity="right"
                    android:hint="@string/fragment5_h65"
                    android:onClick="onClick"
                    android:paddingLeft="14dp"
                    android:paddingTop="14dp"
                    android:paddingRight="24dp"
                    android:paddingBottom="14dp"
                    android:textColor="@color/black1"
                    android:textColorHint="@color/black3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/yuanjiao_5_baise"
                android:elevation="2dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="14dp"
                    android:paddingTop="14dp"
                    android:paddingRight="14dp"
                    android:paddingBottom="14dp"
                    android:text="@string/takecash_h26"
                    android:textColor="@color/black1"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableRight="@mipmap/ic_down_black"
                    android:drawablePadding="10dp"
                    android:elevation="2dp"
                    android:gravity="right"
                    android:hint="@string/takecash_h27"
                    android:onClick="onClick"
                    android:paddingLeft="14dp"
                    android:paddingTop="14dp"
                    android:paddingRight="24dp"
                    android:paddingBottom="14dp"
                    android:singleLine="true"
                    android:textColor="@color/black1"
                    android:textColorHint="@color/black4" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/yuanjiao_5_baise"
                android:elevation="2dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="14dp"
                    android:paddingTop="14dp"
                    android:paddingRight="24dp"
                    android:paddingBottom="14dp"
                    android:text="@string/fragment5_h63"
                    android:textColor="@color/black1" />

                <EditText
                    android:id="@+id/editText1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="end"
                    android:hint="@string/fragment5_h66"
                    android:paddingLeft="24dp"
                    android:paddingTop="14dp"
                    android:paddingRight="24dp"
                    android:paddingBottom="14dp"
                    android:textColor="@color/black1"
                    android:textColorHint="@color/black3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/yuanjiao_5_baise"
                android:elevation="2dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="14dp"
                    android:paddingTop="14dp"
                    android:paddingRight="24dp"
                    android:paddingBottom="14dp"
                    android:text="@string/fragment5_h64"
                    android:textColor="@color/black1" />

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:elevation="2dp"
                    android:gravity="end"
                    android:hint="@string/fragment5_h67"
                    android:inputType="number"
                    android:paddingLeft="24dp"
                    android:paddingTop="14dp"
                    android:paddingRight="24dp"
                    android:paddingBottom="14dp"
                    android:textColor="@color/black1"
                    android:textColorHint="@color/black3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="35dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/yuanjiao_5_baise"
                android:elevation="2dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="14dp"
                    android:paddingTop="14dp"
                    android:paddingRight="24dp"
                    android:paddingBottom="14dp"
                    android:text="@string/settransactionpassword_h2"
                    android:textColor="@color/black1" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:elevation="2dp"
                    android:gravity="right"
                    android:hint="@string/settransactionpassword_h3"
                    android:paddingLeft="24dp"
                    android:paddingTop="14dp"
                    android:paddingRight="24dp"
                    android:paddingBottom="14dp"
                    android:textColor="@color/black1"
                    android:textColorHint="@color/black3" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/yuanjiao_5_baise"
                android:elevation="2dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="14dp"
                    android:paddingTop="14dp"
                    android:paddingRight="24dp"
                    android:paddingBottom="14dp"
                    android:text="@string/settransactionpassword_h4"
                    android:textColor="@color/black1" />

                <EditText
                    android:id="@+id/editText3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="right"
                    android:hint="@string/settransactionpassword_h5"
                    android:inputType="number"
                    android:paddingLeft="24dp"
                    android:paddingTop="14dp"
                    android:paddingRight="24dp"
                    android:paddingBottom="14dp"
                    android:textColor="@color/black1"
                    android:textColorHint="@color/black3" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="24dp"
                    android:background="@drawable/yuanjiaobiankuang_10_lvse"
                    android:onClick="onClick"
                    android:paddingLeft="14dp"
                    android:paddingTop="8dp"
                    android:paddingRight="14dp"
                    android:paddingBottom="8dp"
                    android:singleLine="true"
                    android:text="@string/app_sendcode"
                    android:textColor="@color/green"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/yuanjiao_5_baise"
                android:elevation="2dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="14dp"
                    android:paddingTop="14dp"
                    android:paddingRight="14dp"
                    android:paddingBottom="14dp"
                    android:text="@string/settransactionpassword_h6"
                    android:textColor="@color/black1"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/editText4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="right"
                    android:hint="@string/settransactionpassword_h7"
                    android:inputType="textPassword"
                    android:paddingLeft="14dp"
                    android:paddingTop="14dp"
                    android:paddingRight="24dp"
                    android:paddingBottom="14dp"
                    android:textColor="@color/black1"
                    android:textColorHint="@color/black3"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="30dp"
                android:paddingRight="20dp"
                android:paddingBottom="30dp"
                android:text="@string/fragment5_h68"
                android:textColor="@color/black3" />
            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="14dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/btn_img1"
                android:gravity="center"
                android:onClick="onClick"
                android:padding="12dp"
                android:text="@string/app_confirm"
                android:textColor="@color/white" />
        </LinearLayout>
        <!--有银行页面-->
        <LinearLayout
            android:id="@+id/linearLayout_you"
            android:layout_width="match_parent"
            android:layout_height="173dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/yuanjiao_5_baise"
            android:elevation="2dp"
            android:onClick="onClick"
            android:visibility="gone"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/ic_yinlian"
                    android:drawablePadding="6dp"
                    android:text="@string/addrmanage_h16"
                    android:padding="15dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/black2"
                    android:textSize="15sp"
                    android:textStyle="bold" />
                <ImageView
                    android:id="@+id/iv_edit"
                    android:onClick="onClick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_edit"
                    android:padding="15dp"/>

            </LinearLayout>


            <TextView
                android:id="@+id/tv_banknum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="0"
                android:textColor="@color/black1"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/addrmanage_h11"
                android:textColor="@color/black3"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:id="@+id/tv_kaihuname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="NAME"
                    android:textColor="@color/black1"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_bankname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NAME"
                    android:textColor="@color/black1"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/addrmanage_h12"
                    android:textColor="@color/black3"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/addrmanage_h13"
                    android:textColor="@color/black3"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>
