<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <!--只需要刷新只写header-->
    <com.liaoinstan.springview.widget.SpringView
        android:id="@+id/springView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/bg_invitationreward1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="@mipmap/bg_invitationreward2" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="14dp"
                    android:src="@mipmap/bg_invitationreward3" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@mipmap/bg_invitationreward4" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="14dp"
                    android:background="@mipmap/bg_invitationreward5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginBottom="20dp"
                    android:background="@mipmap/bg_invitationreward6"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="1">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imageView1"
                            android:layout_width="92dp"
                            android:layout_height="92dp"
                            android:background="@mipmap/headimg"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="8dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:text="ID"
                                android:gravity="right"
                                android:textColor="@color/white2"/>
                            <TextView
                                android:id="@+id/textView1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textIsSelectable="true"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/white"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="8dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:text="@string/share_h29"
                                android:gravity="right"
                                android:textColor="@color/white2"/>
                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textIsSelectable="true"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/white"/>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1">
                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="93dp"
                            android:layout_height="93dp"
                            android:background="@color/white"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginTop="20dp"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:background="@mipmap/bg_invitationreward7">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/fragment5_h19"
                                android:textColor="@color/white"
                                android:textSize="15sp"/>
                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:gravity="center"
                                android:drawablePadding="5dp"
                                android:drawableLeft="@mipmap/ic_usdt_white"
                                android:textColor="@color/white"
                                android:textSize="15sp"/>

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </com.liaoinstan.springview.widget.SpringView>
    <!--标题-->
    <LinearLayout
        android:id="@+id/headView"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/left_btn"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:onClick="onClick"
            android:padding="22dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_return1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/fragment5_h15"
            android:visibility="invisible"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/right_btn"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:onClick="onClick"
            android:padding="19dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_fenxiang"
            android:visibility="visible" />

    </LinearLayout>
</RelativeLayout>