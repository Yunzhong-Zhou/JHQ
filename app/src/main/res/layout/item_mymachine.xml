<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.lijiankun24.shadowlayout.ShadowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:shadowColor="#21555555"
        app:shadowDx="0dp"
        app:shadowDy="5dp"
        app:shadowRadius="5dp"
        app:shadowShape="rectangle"
        app:shadowSide="left|right|bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/yuanjiao_10_baise"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:background="@drawable/yuanjiao_10_lvse_left"
                android:ems="1"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="7dp"
                android:text="@string/app_type_zhuangtai"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingBottom="15dp">

                <TextView
                    android:id="@+id/tv_suanli"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0TB"
                    android:textColor="@color/black1"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/fragment5_h22"
                    android:textColor="@color/black3"
                    android:textSize="13sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingBottom="15dp">

                <TextView
                    android:id="@+id/tv_chanzhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/black1"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/fragment5_h23"
                    android:textColor="@color/black3"
                    android:textSize="13sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>
    </com.lijiankun24.shadowlayout.ShadowLayout>
</RelativeLayout>