<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/yuanjiao_10_bg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/pop_view"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="onClick"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/down_blue"
                    android:gravity="center"
                    android:text="@string/app_type_zhuangtai"
                    android:textColor="@color/blue"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/view1"
                    android:layout_width="66dp"
                    android:layout_height="3dp"
                    android:background="@drawable/yuanjiao_5_lanse" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="onClick"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/down_black"
                    android:gravity="center"
                    android:text="@string/app_type_paixu"
                    android:textColor="@color/black2"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="66dp"
                    android:layout_height="3dp"
                    android:background="@drawable/yuanjiao_5_lanse"
                    android:visibility="invisible" />
            </LinearLayout>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/xian"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/yuanjiao_10_baise"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:paddingTop="14dp"
            android:paddingBottom="6dp">
            <com.cho.chocoin.view.LoadingLayout
                android:id="@+id/loading_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.liaoinstan.springview.widget.SpringView
                    android:id="@+id/springView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </com.liaoinstan.springview.widget.SpringView>

            </com.cho.chocoin.view.LoadingLayout>
        </LinearLayout>


    </LinearLayout>


</android.support.constraint.ConstraintLayout>