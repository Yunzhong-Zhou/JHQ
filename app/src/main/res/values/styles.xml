<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@mipmap/background</item><!--启动背景-->
        <item name="android:windowIsTranslucent">true</item>
        <!--<item name="android:navigationBarColor"></item>&lt;!&ndash;导航栏颜色&ndash;&gt;-->
        <!--<item name="android:statusBarColor"></item>&lt;!&ndash;状态栏颜色&ndash;&gt;-->

        <item name="android:textColor">@color/black1</item><!--默认字体颜色-->
        <item name="android:textSize">15.0sp</item><!--默认字号-->
        <item name="android:typeface">normal</item><!--默认字体-->
        <!--<item name="android:textScaleX">1.0</item>&lt;!&ndash;字体间距&ndash;&gt;-->
    </style>

    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/xian</item>
<!--        <item name="colorBackgroundFloating">@color/xian</item>-->
        <item name="colorControlActivated">@color/black3</item>
<!--        <item name="colorControlHighlight">@color/black3</item>-->

    </style>
    <!--popupwindow 底部弹出动画-->
    <style name="take_pop_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_anim</item>
    </style>


    //电池
    <style name="dianCiRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/progressbar_dianci</item>
        <item name="android:minHeight">27dp</item>
        <item name="android:maxHeight">27dp</item>
    </style>


    //人脸识别
    <style name="Widget_GifView"></style>
    <!--底部弹框-->
    <style name="BottomDialog" parent="@style/Theme.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@style/AnimBottom</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="AlertDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
</resources>
