<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/yuanjiao_20_baise_top"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:text="@string/fragment2_h7"
            android:textColor="@color/black3"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@mipmap/ic_jian_green" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingBottom="5dp"
                android:text="1"
                android:textColor="@color/black1"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:text="@string/app_tai"
                android:textColor="@color/black1"
                android:textSize="20sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@mipmap/ic_jia_green" />

        </LinearLayout>

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:max="100"
            android:maxHeight="9dp"
            android:min="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:progress="1"
            android:progressDrawable="@drawable/progressbar_bg_lvsejianbian"
            android:splitTrack="false"
            android:thumb="@drawable/seek_bar_thumb" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:text="@string/fragment3_h58"
            android:textColor="@color/green_1"
            android:textSize="14sp"
            android:textStyle="bold" />
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="14dp"
            android:background="#F7F7F7"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/fragment3_h59"
            android:textColor="@color/black3"
            android:textSize="13sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="24dp"
            android:paddingTop="10dp"
            android:paddingRight="24dp"
            android:paddingBottom="14dp">

            <RelativeLayout
                android:id="@+id/rl_daiyunying"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:onClick="onClick">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/yuanjiaobiankuang_5_lvse"
                    android:gravity="center"
                    android:text="@string/fragment3_h60"
                    android:textColor="@color/green"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_daiyunying"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/ic_xuanzhong" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_ziyunying"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:onClick="onClick">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/yuanjiaobiankuang_5_lvse"
                    android:gravity="center"
                    android:text="@string/fragment3_h61"
                    android:textColor="@color/green"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_ziyunying"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/ic_xuanzhong"
                    android:visibility="invisible" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_huigou"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:onClick="onClick">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/yuanjiaobiankuang_5_lvse"
                    android:gravity="center"
                    android:text="@string/fragment3_h66"
                    android:textColor="@color/green"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_huigou"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/ic_xuanzhong"
                    android:visibility="visible" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_huigou_not"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:onClick="onClick">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/yuanjiaobiankuang_5_lvse"
                    android:gravity="center"
                    android:text="@string/fragment3_h67"
                    android:textColor="@color/green"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_huigou_not"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/ic_xuanzhong"
                    android:visibility="invisible" />

            </RelativeLayout>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="@string/fragment1_h25"
            android:textColor="@color/black3"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="17dp"
            android:background="@color/xian" />

        <LinearLayout
            android:id="@+id/ll_lingqian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_lingqian" />

            <TextView
                android:id="@+id/tv_lingqian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="@string/fragment5_h87"
                android:textColor="@color/black1"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/iv_lingqian"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_kuang_true" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:background="@color/xian" />

        <LinearLayout
            android:id="@+id/ll_zhifubao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_zhifubao" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="@string/fragment5_h89"
                android:textColor="@color/black1"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/iv_zhifubao"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/yuanxingbiankuang_baise" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:background="@color/xian"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/ll_weixin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_weixin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="@string/fragment5_h90"
                android:textColor="@color/black1"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/iv_weixin"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/yuanxingbiankuang_baise" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:background="@color/xian"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/ll_zhuanzhang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_zhuanzhang" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="@string/fragment1_h27"
                android:textColor="@color/black1"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/iv_zhuanzhang"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/yuanxingbiankuang_baise" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fragment5_h91"
                    android:textColor="#00D4A1"
                    android:textSize="15sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fragment5_h93"
                    android:textColor="@color/black3"
                    android:visibility="gone"
                    android:textSize="13sp"
                    android:layout_marginTop="4dp"
                    />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_img1"
                android:gravity="center"
                android:onClick="onClick"
                android:text="@string/fragment5_h86"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>